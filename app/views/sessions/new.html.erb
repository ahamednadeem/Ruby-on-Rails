<style>

body{
  background-color: #333333;
}
.row1{
    margin-left : 440px;
    margin-top: 40px;
    margin-right : 500px;
}

</style>
<h3 style="margin-left: 650px; margin-top: 80px; color: white;">LOGIN</h3>
<div class="row row1 jumbotron">
    <div class="col-md-12 col-md-offset-3 well">
        <%= form_tag '/login' do %>
            <div class="form-group">
                <%= label_tag :email %>
                <%= text_field_tag :email, nil, class: 'form-control' %>
            </div>

            <div class="form-group">
            <%= label_tag :password %>
            <%= password_field_tag :password, nil, class: 'form-control' %>
            </div>

            <%= submit_tag 'log in', class: 'btn btn-success' %>

        <% end %>
    </div>
</div>
