<%= render 'home/header' %>
<style>
  body {
    background-color: #333333;
  }
  .center2 {
    margin: 0 auto;
    width: 1180px;
  }
  .center3 {
    margin-left: 140px;
  }
</style>

<div class="center2">
  <table class='table table-dark table-bordered table-hover'>
    <thead class='thead-dark'>
      <tr>
        <th>No</th>
        <th>NAME</th>
        <th>EMAIL</th>
        <th>PHONE</th>
        <th>EDIT</th>
        <th>DELETE</th>
      </tr>
    </thead>
    <tbody id="friends"> 
      <% @friends.each_with_index do |friend, index| %>
      <tr>
        <td><%= index + 1 %></td> 
        <td><%= friend.name %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= link_to "Edit", edit_friend_path(friend), class: "btn btn-success" %></td>
        <td><%= button_to "Delete this User", friend, method: :delete, class: "btn btn-danger" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
